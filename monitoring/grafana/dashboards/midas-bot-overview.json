{
  "dashboard": {
    "title": "Midas Finance Bot - Overview",
    "tags": ["midas", "bot", "overview"],
    "timezone": "browser",
    "schemaVersion": 16,
    "version": 1,
    "refresh": "30s",
    "panels": [
      {
        "id": 1,
        "title": "Bot Requests Rate",
        "type": "graph",
        "gridPos": {"x": 0, "y": 0, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "rate(bot_requests_total[5m])",
            "legendFormat": "{{command}}",
            "refId": "A"
          }
        ]
      },
      {
        "id": 2,
        "title": "Bot Error Rate",
        "type": "graph",
        "gridPos": {"x": 12, "y": 0, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "rate(bot_errors_total[5m])",
            "legendFormat": "{{error_type}}",
            "refId": "A"
          }
        ]
      },
      {
        "id": 3,
        "title": "AI Categorization Duration (p95)",
        "type": "graph",
        "gridPos": {"x": 0, "y": 8, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(ai_categorization_duration_seconds_bucket[5m]))",
            "legendFormat": "p95",
            "refId": "A"
          }
        ]
      },
      {
        "id": 4,
        "title": "AI Confidence Distribution",
        "type": "heatmap",
        "gridPos": {"x": 12, "y": 8, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "rate(ai_confidence_score_bucket[5m])",
            "legendFormat": "{{le}}",
            "refId": "A"
          }
        ]
      },
      {
        "id": 5,
        "title": "Auto-Confirmation Rate",
        "type": "stat",
        "gridPos": {"x": 0, "y": 16, "w": 6, "h": 4},
        "targets": [
          {
            "expr": "rate(ai_auto_confirmed_total[5m]) / rate(ai_categorization_requests_total[5m]) * 100",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "red"},
                {"value": 50, "color": "yellow"},
                {"value": 70, "color": "green"}
              ]
            }
          }
        }
      },
      {
        "id": 6,
        "title": "Active Users",
        "type": "stat",
        "gridPos": {"x": 6, "y": 16, "w": 6, "h": 4},
        "targets": [
          {
            "expr": "active_users",
            "refId": "A"
          }
        ]
      },
      {
        "id": 7,
        "title": "Queue Size",
        "type": "graph",
        "gridPos": {"x": 12, "y": 16, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "queue_size",
            "legendFormat": "{{priority}}",
            "refId": "A"
          }
        ]
      },
      {
        "id": 8,
        "title": "Transactions Synced Rate",
        "type": "graph",
        "gridPos": {"x": 0, "y": 20, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "rate(transactions_synced_total[5m])",
            "legendFormat": "{{wallet_type}}",
            "refId": "A"
          }
        ]
      },
      {
        "id": 9,
        "title": "Database Query Duration (p95)",
        "type": "graph",
        "gridPos": {"x": 12, "y": 24, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(db_query_duration_seconds_bucket[5m]))",
            "legendFormat": "{{table}} - {{operation}}",
            "refId": "A"
          }
        ]
      },
      {
        "id": 10,
        "title": "Redis Operations Rate",
        "type": "graph",
        "gridPos": {"x": 0, "y": 28, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "rate(redis_operations_total[5m])",
            "legendFormat": "{{operation}} - {{status}}",
            "refId": "A"
          }
        ]
      }
    ]
  }
}
